            <action method="addItem">
                <type>skin_js</type>
                <name>js/jquery.nouislider.all.min.js</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>js/developer.js</name>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <name>css/jquery.nouislider.css</name>
