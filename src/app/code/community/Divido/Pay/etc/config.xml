<?xml version="1.0"?>
<config>
    <modules>
        <Divido_Pay>
            <version>0.1.0</version>
        </Divido_Pay>
    </modules>

    <adminhtml>
        <layout>
            <updates>
                <divido_pay>
                    <file>divido_pay.xml</file>
                </divido_pay>
            </updates>
        </layout>
    </adminhtml>

    <global>
        <models>
            <pay>
                <class>Divido_Pay_Model</class>
            </pay>
            <price>
                <class>Divido_Price_Model</class>
            </price>
        </models>

        <helpers>
            <pay>
                <class>Divido_Pay_Helper</class>
            </pay>
        </helpers>

        <events>
            <admin_system_config_changed_section_payment>
                <observers>
                    <updateDefaultProductPlans>
                        <class>Divido_Pay_Model_Observer</class>
                        <method>updateDefaultProductPlans</method>
                    </updateDefaultProductPlans>
                </observers>
            </admin_system_config_changed_section_payment>
        </events>

        <blocks>
            <pay>
                <class>Divido_Pay_Block</class>
            </pay>
            <dividowidget>
                <class>Divido_Price_Block</class>
            </dividowidget>
        </blocks>

        <resources>
            <divido_pay_setup>
                <setup>
                    <module>Divido_Pay</module>
                    <class>Divido_Pay_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </divido_pay_setup>
            <pay_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </pay_write>
            <pay_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </pay_read>
        </resources>

        <sales>
            <quote>
                <item>
                    <product_attributes>
                        <divido_plan_option />
                        <divido_plan_selection />
                    </product_attributes>
                </item>
            </quote>
        </sales>

    </global>

    <!-- declare default configuration values for this module -->
    <default>
        <payment>
            <pay>
                <active>0</active>
                <model>pay/Standard</model>
                <order_status>pending</order_status>
                <title>Pay In Instalments Divido</title>
                <sort>1</sort>
            </pay>
        </payment>
    </default>
    <frontend>
        <routers>
            <pay>
                <use>standard</use>
                <args>
                    <module>Divido_Pay</module>
                    <frontName>pay</frontName>
                </args>
            </pay>
        </routers>
        <layout>
            <updates>
                <divido_pay>
                    <file>divido.xml</file>
                </divido_pay>
            </updates>
        </layout>
        <events>
            <payment_method_is_active>
                <observers>
                    <toggleDividoAvailability>
                        <class>Divido_Pay_Model_Observer</class>
                        <method>toggleDividoAvailability</method>
                    </toggleDividoAvailability>
                </observers>
            </payment_method_is_active>
        </events>
    </frontend>
</config>
